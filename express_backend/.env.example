# Backend environment variables
MONGODB_URI=mongodb://localhost:27017/analytics
FRONTEND_ORIGIN=http://localhost:3000
STRICT_CORS=false

PORT=3001
HOST=0.0.0.0

# JWT configuration
JWT_SECRET=change-me
TOKEN_EXPIRES_IN=1d

# Provisioned admin credentials
VITE_ADMIN_EMAIL=admin@example.com
VITE_ADMIN_PASSWORD=StrongPassword123
# Optional explicit admin username, defaults to part before @ in email
# VITE_ADMIN_USERNAME=admin

# Optional maintenance token for /api/admin/seed (remove after provisioning)
# Set to a random string; required in header X-Maintenance-Token
VITE_MAINTENANCE_TOKEN=one-time-secret
